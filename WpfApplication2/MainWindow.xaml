        <PasswordBox x:Name="passwordBox" HorizontalAlignment="Left" Margin="23,115,0,0" VerticalAlignment="Top" Width="166"/>
        <Button x:Name="button2" Content="Войти" HorizontalAlignment="Left" Margin="23,153,0,0" VerticalAlignment="Top" Width="166" Click="button2_Click"/>
        <Button x:Name="button3" Content="Зайти гостем" HorizontalAlignment="Left" Margin="23,180,0,0" VerticalAlignment="Top" Width="166" Click="button3_Click"/>
    </Grid>
    </ScrollViewer>

</Window>
